FROM debian:buster

RUN set -ex \
    && sed -i -- 's/# deb-src/deb-src/g' /etc/apt/sources.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
               build-essential \
               cdbs \
               devscripts \
               equivs \
               fakeroot \
               curl \
               autoconf \
               automake \
               cmake \
               meson \
               npm \
    && apt-get clean \
    && curl https://sh.rustup.rs -s | sh -s -- --default-toolchain stable -y \
    && cp $HOME/.cargo/bin/* /usr/bin/ \
    && rm -rf /tmp/* /var/tmp/*
